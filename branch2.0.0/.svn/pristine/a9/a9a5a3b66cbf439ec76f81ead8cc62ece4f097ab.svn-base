/* pages/distribution/incomeDetail/incomeDetail.wxss */
.header{
    width: 100%;
}
.top{
    width: 100%;
    background-color: #ac1630;
    padding: 40rpx 40rpx 30rpx;
}
.title{
    font-size: 28rpx;
    color: #ffdda7;
}
.money_num{
    font-size: 48rpx;
    color: #ffffff;
}
.bottom{
    display: flex;
    width: 100%;
    background-color: #b51d37;
    position: relative;
}
.left_con{
    flex:1;
    padding: 30rpx 40rpx;
    display: flex;
    justify-content: space-between;
}
.s_title{
    font-size: 24rpx;
    color: #ffdda7;
}
.b_money{
    color: #ffffff;
    font-size: 28rpx;
}
.click_btn{
    color: #ffffff;
    font-size: 24rpx;
}
.click_btn{
    display: flex;
    align-items: center;
}
.border{
    width: 2rpx;
    height: 64rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #cb5759;
}

.records{
    width: 100%;
    padding: 0 20rpx;
}
.record_desc{
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
    font-size: 24rpx;
    color: #333333;
    border-bottom: 1rpx solid #f2f2f2;
}
.right{
    text-align: right;
}
.left{
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.money{
    margin-bottom: 14rpx;
}
.time{
    color: #666666;
    font-size: 24rpx;
}
.small_words{
    color: #666666;
    font-size: 24rpx;
    margin-top: 10rpx;
}


.nick_name{
    color: #333333;
    margin: 10rpx 0;
}
view.des{
    width: 100%;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.money{
    color: #ac1630;
}
.right_icon{
    width: 10rpx;
    height: 18rpx;
    margin-left: 8rpx;
}
.no_icon{
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
}
.nothing_container{
    margin-top: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #333333;
    font-size: 24rpx;
    flex-direction: column;
}