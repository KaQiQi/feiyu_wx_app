.tabbar {
    width: 100%;
    display: flex;
    background-color: #fff;
    border-bottom: 1rpx solid #f2f2f2;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999999999;
    height: 88rpx;
    border-top: 1rpx solid #f2f2f2;
}

.tabbar>view {
    flex: 1;
}

.placeholder {
    width: 100%;
    height: 88rpx;
}

.content {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
    color: #333333;
    justify-content: center;
    position: relative;
}

.content .border {
    width: 90rpx;
    height: 6rpx;
    position: absolute;
    left: 50%;
    bottom: -1rpx;
    transform: translateX(-50%);
}

.active {
    background-color: #e72f4b;
}

#active {
    color: #e72f4b;
}


.product_desc{
    width: 100%;
    border-bottom: 12rpx solid #f2f2f2;
}
.top_time{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx;
    color: #666666;
    font-size: 26rpx;
}
.time{
    color: #888888;
    font-size: 22rpx;
}
.pro_info{
    display: flex;
    width: 100%;
    background-color: #f7f7f7;
    padding: 20rpx;
}
.left_img{
    width: 110rpx;
    height: 110rpx;
    border: 1rpx solid #dddddd;
    margin-right: 20rpx;
}
.pro_img{
    width: 110rpx;
    height: 110rpx;
    display: block;
}
.right_des{
    color: #333333;
    font-size: 26rpx;
}
.time_no{
    font-size: 24rpx;
    color: #666666;
}
.order_address_info {
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #f2f2f2;
    padding: 0 20rpx;
}

.address_content {
    margin-right: 40rpx;
    width: 100%;
    padding: 20rpx 0;
    margin-left: 20rpx;
}

.user_info {
    display: flex;
    justify-content: space-between;
}

.order_address_info image {
    display: block;
    margin: auto 0;
}

.order_name {
    color: #666666;
    font-size: 26rpx;
}

.order_phone {
    color: #666666;
    font-size: 26rpx;
}

.order_address {
    margin-top: 14rpx;
    color: #8b8b8b;
    font-size: 26rpx;
}
.location_icon{
    width: 36rpx;
    height: 36rpx;
    margin-right: 8rpx;
}
.wl_info{
    width: 100%;
    padding: 20rpx;
}
.top_info{
    font-size: 26rpx;
    color: #666666;
}
.time_info{
    font-size: 22rpx;
    color: #888888;
    margin-top: 4rpx;
}