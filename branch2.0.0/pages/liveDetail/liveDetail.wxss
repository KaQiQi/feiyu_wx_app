/* pages/live_demo/liveDetail/liveDetail.wxss */

.clearfix::after {
  display: block;
  content: "";
  clear: both;
}

page {
  width: 100%;
  height: 100%;
}

.noscroll {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.words {
  line-height: 42rpx;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

view, text, image {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 分享 */

.share_mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.46);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99999999999999;
}

.img_container {
  width: 540rpx;
  height: 961rpx;
  margin: 100rpx auto;
  /* background-color: #f2f2f2; */
  position: relative;
}

.ewm_img {
  display: block;
  width: 540rpx;
  height: 961rpx;
}

.tips {
  display: flex;
  justify-content: center;
  width: 540rpx;
  color: #333;
  font-size: 26rpx;
  position: absolute;
  left: 0;
  bottom: -80rpx;
  text-align: center;
}

.tips text {
  padding: 16rpx 80rpx;
  border-radius: 40rpx;
  background: #fff;
  text-align: center;
}

.close_mask {
  position: absolute;
  top: 20rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close_mask>image {
  width: 50rpx;
  height: 50rpx;
  display: block;
}

.share_icon {
  width: 70rpx;
  height: 70rpx;
  margin-top: 12rpx;
}

.share {
  position: fixed;
  top: 30rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  z-index: 66666666;
}

/* 分享结束 */

.topCarousel {
  width: 100%;
  height: 500rpx;
}

.topCarousel swiper {
  width: 100%;
  height: 100%;
  position: relative;
}

.v_container {
  width: 100%;
  height: 100%;
}

