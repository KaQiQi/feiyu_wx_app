/* pages/order/editIdCard/editIdCard.wxss */
page{
  background: #f2f2f2
}
.line{
 background: #f2f2f2;
 width: 100%; 
 height: 1rpx;
}
.id_card{
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  justify-content: space-between;
}
.all{
  margin-bottom: 12rpx;
}
.id_card_bottom{
  display: flex;
   border-top: 1rpx solid #f2f2f2;
  padding: 20rpx 30rpx;
  background-color: #fff;
  justify-content: space-between;
}
.id_card_text{
  font-size: 28rpx;
  color: #333;
}
.card_text{
   font-size: 26rpx;
  color: #666;
}
.id_card_left{
  display: flex;
}
.id_card_right{
  display: flex;
  justify-content: center;
  align-items: center;
}
.label{
  padding: 10rpx 0;
  font-size: 26rpx;
  line-height: 54rpx;
}
.btn_id_card{
  display: flex;
  height: 48rpx;
  width: 100rpx;
  border: 1rpx solid #e72e4b;
  background: #fff;
  border-radius: 4rpx;
  color: #e72e4b;
  font-size: 26rpx;
  /* padding: 10rpx 20rpx; */
  margin-left: 20rpx;
  justify-content: center;
}
.upload{
  background: #e72e4b;
  color: #fff;
  width: 100%;
  font-size: 28rpx;
  padding: 26rpx 0;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
}
/*  重写 radio 样式  */
.wx-radio-input{
   border-radius: 50%;
   width: 40rpx;
   height: 40rpx;
}
.wx-radio-input.wx-radio-input-checked{
   border: none;
   background: red;
}
.wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;
   width: 40rpx;
   height: 40rpx;
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx;
   color:#fff;
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}