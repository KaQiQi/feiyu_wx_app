.relive_title {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #f2f2f2;
}

.relive_title_left {
  display: flex;
  align-items: center;
}

.relive_title_left image {
  width: 4rpx;
  height: 26rpx;
  display: block;
}

.relive_title_left text {
  font-size: 28rpx;
  color: #333;
  margin-left: 12rpx;
}

.relive_title_right {
  display: flex;
  align-items: center;
}

.relive_title_right image {
  width: 17rpx;
  height: 24rpx;
  display: block;
  margin-left: 10rpx;
}

.relive_title_right text {
  font-size: 24rpx;
  color: #666;
}

.living_content {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #f2f2f2
}

.living_content_left {
  position: relative;
}

.living_image {
  width: 180rpx;
  height: 120rpx;
  display: block;
}

.relive_icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 28rpx;
  height: 28rpx;
  display: block;
}

.living_content_right {
  display: flex;
  width: 100%;
  padding-left: 20rpx;
  justify-content: space-between;
}

.content_left {
  /* overflow: hidden;
  width: 100%; */
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.content_bot {
  display: flex;
  align-items: center;
}

.content_bot image {
  width: 18rpx;
  height: 22rpx;
  display: block;
}

.content_bot text {
  font-size: 20rpx;
  color: #666;
  margin-left: 12rpx;
}

.content_top {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 400rpx;
}

.content_top text {
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}

.content_mid {
  align-items: center;
  display: flex;
}

.retext {
   width: 60rpx;
