/* pages/distribution/accountDetail/accountDetail.wxss */
.total_detail{
    width: 100%;
    padding: 30rpx 20rpx;
    background-color: #ac1630;
    position: relative;
}
.left_content{
    display: flex;
    flex-direction: column;
}
.left_bototm{
    display: flex;
    margin-top: 10rpx;
}
.total_balance{
    color: #ffffff;
    font-size: 28rpx;
}
.recharge,.consume{
    font-size: 24rpx;
    color: #ffdd7a;
    margin-right: 20rpx;
}


.recharge_btn{
    width: 85rpx;
    height: 42rpx;
    text-align: center;
    line-height: 42rpx;
    border-radius: 4rpx;
    background-color: #ffffff;
    font-size: 24rpx;
    color: #ac1630;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 20rpx;
}

.items{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.records{
    width: 100%;
    padding: 0 20rpx;
}
.record_desc{
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
    font-size: 24rpx;
    color: #333333;
    border-bottom: 1rpx solid #f2f2f2;
}
.right{
    text-align: right;
}
.left{
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.money{
    margin-bottom: 14rpx;
}
.time{
    color: #666666;
    font-size: 24rpx;
}
.small_words{
    color: #666666;
    font-size: 24rpx;
    margin-top: 10rpx;
}


.nick_name{
    color: #333333;
    margin: 10rpx 0;
}
view.des{
    width: 100%;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.money{
    color: #ac1630;
}
.no_icon{
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
}
.nothing_container{
    margin-top: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #333333;
    font-size: 24rpx;
    flex-direction: column;
}