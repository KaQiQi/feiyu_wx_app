.total_detail{
    width: 100%;
    padding: 30rpx 20rpx;
    background-color: #ac1630;
    position: relative;
}
.left_content{
    display: flex;
    flex-direction: column;
}
.left_bototm{
    display: flex;
    margin-top: 10rpx;
}
.total_balance{
    color: #ffffff;
    font-size: 28rpx;
}
.recharge,.consume{
    font-size: 24rpx;
    color: #ffdd7a;
    margin-right: 20rpx;
}


.recharge_btn{
    width: 85rpx;
    height: 42rpx;
    text-align: center;
    line-height: 42rpx;
    border-radius: 4rpx;
    background-color: #ffffff;
    font-size: 24rpx;
    color: #ac1630;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 20rpx;
}
.tabbar{
    display: flex;
    width: 100%;
    height: 98rpx;
    color: #333333;
    font-size: 26rpx;
    padding: 0 22rpx;
    border-bottom: 1rpx solid #f2f2f2;
    align-items: center;
}
#active{
    color: #ac1630;
}
.items{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.records{
    width: 100%;
    padding: 0 20rpx;
}
.record_desc{
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
    font-size: 24rpx;
    color: #333333;
    border-bottom: 1rpx solid #f2f2f2;
}
.right{
    text-align: right;
}
.left{
    width: 70%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.money{
    margin-bottom: 14rpx;
}
.time{
    color: #666666;
    font-size: 24rpx;
}
.small_words{
    color: #666666;
    font-size: 24rpx;
    margin-top: 10rpx;
}
#mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}
.couponDetail {
  width: 100%;
  /* height: 310rpx; */
  position: fixed;
  left: 0;
  z-index: 99999999;
  bottom: -510rpx;
  background: #fff;
  transition: all 0.5s;
}
#bottom, #shopbtm, #coupon_mask,#choose_coupon {
  bottom: 0;
}
.btn_view {
  padding: 20rpx 0 40rpx 0;
  font-size: 28rpx;
  color: #333;
  display: flex;
  width: 100%;
  /* height: 100rpx; */
  justify-content: center;
  align-items: center;
}
.btn_cancel{
  font-size: 28rpx;
  background-color: #fff;
  display: flex;
  width: 100%;
  /* height: 100rpx; */
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}
.account_balance{
  width: 100%;
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.account{
  font-size: 24rpx;
  color: #333;
}
.balance{
  font-size: 20rpx;
  color: #666;
}
.wx_pay{
  width: 100%;
  display: flex;
  padding: 30rpx 0;
  border-bottom: 12rpx solid #f2f2f2;
  justify-content: center;
  align-items: center;
}
.pay_type{
    margin-right: -16rpx;
}
view.des{
    width: 100%;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.no_icon{
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
}
.nothing_container{
    margin-top: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #333333;
    font-size: 24rpx;
    flex-direction: column;
}