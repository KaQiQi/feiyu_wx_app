/* pages/video/video.wxss */
page{
    width: 100%;
    height: 100%;
    background-color: #000000;
}
view,image,text{
    box-sizing: border-box;
}
/* video{
    position: relative;
} */
.clearfix::after {
    display: block;
    content: "";
    clear: both;
}

.fl {
    float: left;
}

.fr {
    float: right;
}
.cross_scr{
    width: 100%;
    height: 500rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}
.vertical_scr{
    width: 100%;
    height: 100%;
}

.click_place{
    width: 100%;
    height: 1100rpx;
    position: absolute;
    top: 0;
    left: 0;
}
.shop_info{
    position:absolute;
    top: 30rpx;
    left: 28rpx;
    /* height: 96rpx; */
    z-index: 666;
    display: flex;
    align-items: center;
    padding: 10rpx;
    background-color: rgba(0,0,0,0.5);
    border-radius: 55rpx;
    padding-right: 40rpx;
}
.flex_left{
    width: 90rpx;
    height: 90rpx;
    border-radius: 46rpx;
    margin-right: 10rpx;
}
.avator{
    display: block;
    width: 90rpx;
    height: 90rpx;
    border-radius: 46rpx;
    /* border: 2rpx solid #fff; */
}
.flex_right{
    width: 100%;
    overflow: hidden;
    color: #fff;
}

.follow{
    display: block;
    position: absolute;
    width: 110rpx;
    height: 44rpx;
    border-radius: 24rpx;
    top: 50%;
    transform: translateY(-60%);
    right: -10rpx;
    z-index: 6666666;
}
.info_bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 383rpx;
    height: 95rpx;
}
.shop_name{
    color: #fff;
    font-size: 26rpx;
    margin-top: 5rpx;
}
.anchor_name{
    position: absolute;
    top: 10rpx;
    left: 106rpx;
    color: #fff;
    font-size: 26rpx;
}
.shop_desc{
    color: #fff;
    font-size: 22rpx;
    margin-top: 15rpx; 
}
.anchor_say{
    position: absolute;
    bottom: 10rpx;
    left: 106rpx;
    color: #fff;
    font-size: 22rpx;
    width: 270rpx;
    white-space: pre-wrap;
}

/* 商品详情 */
.product_desc{
    position: absolute;
    right: 20rpx;
    bottom: 128rpx;
    z-index: 9999;
}
.product_info{
    position: relative;
    width: 350rpx;
    height: 124rpx;
    margin-top: 30rpx;
}
.pro_bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 350rpx;
    height: 124rpx;
}
.pro_brand{
    position: absolute;
    height:60rpx;
    overflow: hidden;
    top: 17rpx;
    left: 16rpx;
    width: 202rpx;
    font-size: 22rpx;
}
.pro_img{
    position: absolute;
    top: 2rpx;
    right: 2rpx;
    width: 120rpx;
    height: 120rpx;
}
.shopcar{
    position: absolute;
    width: 24rpx;
    height: 24rpx;
    left: 18rpx;
    bottom: 12rpx;
}
.price{
    width: 100rpx;
    position: absolute;
    font-size: 26rpx;
    bottom: 9rpx;
    right: 136rpx;
    color: #e72f4b;
    white-space: pre-wrap;
    text-align: right;
}

.pro_btm{
    width: 100%;
    position: absolute;
    bottom: 0rpx;
    left: 0;
    display: flex;
    justify-content: space-between;
    padding: 0 10rpx 20rpx;
    flex-wrap: wrap;
}
.mask{
    width: 100%;
    height: 362rpx;
    position: absolute;
    top: 50%;
    transform:translateY(-62%);
}