/* pages/storePage/anchor/anchorDetail.wxss */

/* 头部横幅 */

.top_banner {
  position: relative;
  width: 100%;
}

.top_banner>image {
  width: 750rpx;
  height: 362rpx;
  display: block;
}

.store_desc {
  width: 100%;
  padding: 0 30rpx;
}

.shop_main {
  width: 100%;
  position: relative;
  padding-bottom: 20rpx;
}

.shop_main .store_avatar {
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  top: -100rpx;
  left: 0;
  /* border-radius: 6rpx; */
}

.desc_right {
  justify-content: space-between;
  position: absolute;
  width: 100%;
  top: -80rpx;
  left: 0;
  padding-left: 138rpx;
  margin-top: 16rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}

.location_icon {
  width: 18rpx;
  height: 22rpx;
  display: block;
  margin: auto 0;
  margin-left: 20rpx;
  margin-right: 5rpx;
}

.shop_name {
  font-size: 24rpx;
  color: #fff;
}

.location {
  font-size: 24rpx;
  color: #fff;
}

/* tab栏 */

.tabbar {
  padding: 0 100rpx;
  display: flex;
  border-bottom: 10rpx solid #f2f2f2;
}

.tabbar>view {
  flex: 1;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #1e1e1e;
  padding-top: 24rpx;
}

.content .num {
  font-size: 32rpx;
  font-weight: 900;
  margin-bottom: 6rpx;
}

.home_icon {
  width: 37rpx;
  height: 34rpx;
  display: block;
  margin-bottom: 10rpx;
  margin-top: 6rpx;
}

.content .border {
  width: 54rpx;
  height: 4rpx;
  margin-top: 20rpx;
}

.active {
  background-color: #e72f4b;
}

#active {
  color: #e72f4b;
}

/* 好货上新 */

.products_info {
  display: flex;
  flex-wrap: wrap;
  padding: 0rpx 20rpx;
  justify-content: space-between;
  background-color: #f2f2f2;
}

.product_info {
  width: 100%;
  padding: 30rpx 20rpx;
  align-items: center;
  background: #f2f2f2;
}

.info_icon {
  width: 238rpx;
  height: 26rpx;
  margin: 0 auto;
  display: block;
}

.brand_desc {
  /* text-align: center; */
  font-size: 22rpx;
  color: #333;
  margin-top: 14rpx;
  padding: 0 20rpx;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
}

.products_detail .pro_img {
  width: 350rpx;
  height: 350rpx;
  display: block;
}

.products_detail {
  background-color: #fff;
  position: relative;
  width: 350rpx;
  margin: 0 0 14rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.pro_name {
  text-align: center;
  overflow: hidden;
  width: 100%;
  font-size: 24rpx;
  color: #333;
  margin-top: 18rpx;
  font-weight: 500;
}

.pro_price {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  font-weight: 800;
  margin-top: 16rpx;
  margin-bottom: 18rpx;
}

.live_play {
  width: 66rpx;
  height: 66rpx;
  position: absolute;
  top: 38%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.play_bg {
  display: block;
  width: 100%;
  height: 100%;
}

.live_time_play {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
}

.live_time {
  position: absolute;
  left: 34rpx;
  font-size: 22rpx;
  color: #fff;
  line-height: 41rpx;
  height: 41rpx;
  text-align: center;
  margin-left: 5rpx;
}

.button {
  font-size: 22rpx;
  color: #666;
  background-color: transparent;
  padding: 0;
  border: 0;
  margin: 0;
  display: flex;
  align-items: center;
  outline: none;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 6rpx;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
}

button::after {
  border: none;
}

/* 空状态 */

.order_none {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
  margin-top: 100rpx;
  margin-bottom: 30rpx;
}

.none_tips {
  color: #666;
  font-size: 26rpx;
  text-align: center;
}

/* 直播详情 */

.top_tips>image {
  width: 238rpx;
  height: 26rpx;
  display: block;
  margin: 0 auto;
  margin-top: 30rpx;
}

.hot_live{
 border-bottom: 10rpx solid #f2f2f2;
}
.live_detail {
  width: 100%;
  padding: 20rpx 40rpx 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}

.words_desc {
  width: 100%;
  overflow: hidden;
  margin-left: 20rpx;
  height: 142rpx;
  position: relative;
}

.live_img>image {
  width: 214rpx;
  height: 142rpx;
  display: block;
}

.live_icon {
  width: 100rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.top_title {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #333;
  width: 100%;
}

.right_icon {
  width: 16rpx;
  height: 22rpx;
  margin-left: 8rpx;
}

.live_status {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  /* margin-top: 50rpx; */
  position: absolute;
  bottom: 16rpx;
  left: 0;
}

.alert {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

/* #word_care{
    margin-top: 1px;
} */

.flex_left, .flex_right {
  font-size: 22rpx;
  display: flex;
  align-items: center;
}

.live_trailer {
  width: 61rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

/* 简介 */

.liver {
  padding: 20rpx 20rpx 20rpx;
  border-bottom: 10rpx solid #f2f2f2;
  font-size: 24rpx;
  color: #333;
}

.liver_detail {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.liver_detail>view {
  margin-bottom: 30rpx;
  width: 50%;
  font-size: 24rpx;
  color: #333;
}

/* .liver_detail>view>text{
  margin-right: 8rpx;
} */

.video_desc {
  width: 100%;
  padding: 20rpx 20rpx 30rpx;
  /* border-bottom: 10rpx solid #f2f2f2; */
}

.words_content {
  font-size: 24rpx;
  color: #333;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

.anchor_video {
  width: 708rpx;
  height: 368rpx;
  margin: 0 auto;
  position: relative;
}

.video_bg_img {
  width: 100%;
  height: 100%;
  display: block;
}

.video_icon {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 商品展示 */

.products_list_content {
  padding: 20rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 40rpx;

}

.products_list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between;  */
  padding: 0 20rpx;
}

.products_list .flex_container {
  width: 228rpx;
  height: 228rpx;
  position: relative;
  margin-bottom: 12rpx;
  margin-right: 12rpx;
}
#nomargin{
  margin-right: 0;
}

.img {
  width: 226rpx;
  height: 226rpx;
}

.anchor_detail {
  width: 408rpx;
  height: 408rpx;
  padding-left: 20rpx;
  position: relative;
}

.bot_live {
  padding: 20rpx;
  padding-top: 10rpx;
  justify-content: space-between;
  display: flex;
  align-items: center;
}

.bot_live text {
  font-size: 22rpx;
  color: #323333;
}

.bot_live_right {
  display: flex;
  align-items: center;
}

.bot_live_right text {
  font-size: 22rpx;
  color: #323333;
}

.bot_live_right image {
  width: 24rpx;
  height: 22rpx;
  margin: auto 0;
  margin-left: 10rpx;
}

.videos_icon {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.loading_image{
  margin-top: 400rpx;
  margin-left: 275rpx;
  width: 200rpx;
  height: 90rpx;
  display: block;
}


.shopcar_icon {
  width: 30rpx;
  height: 26rpx;
}

.other_hot_price {
  padding: 16rpx 26rpx 20rpx 20rpx;
  display: flex;
  justify-content: space-between;
  color: #e72f4b;
  font-weight: 700;
  font-size: 24rpx;
  /* margin-top: 16rpx; */
}


/* sku */
.product_sku {
  width: 100%;
  height: 800rpx;
  overflow: scroll;
  background-color: #fff;
  position: fixed;
  left: 0;
  z-index: 99999999;
  padding: 0 30rpx;
  bottom: -800rpx;
  transition: all 0.5s;
}

#bottom, #shopbtm, #coupon_mask,#choose_coupon {
  bottom: 0;
}

.brand {
  display: flex;
  width: 100%;
  padding: 30rpx 0;
}

.brand_img image {
  display: block;
  width: 220rpx;
  height: 220rpx;
}

.brand_desc text {
  display: block;
}

.sc_brand_desc {
  margin-left: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 24rpx;
  color: #333;
}
.sc_brand_price {
  font-size: 26rpx;
  color: #e72f4b;
}

.sc_brand_name {
  color: #333;
  font-size: 30rpx;
  margin-top: 16rpx;
}

.spec {
  width: 100%;
  padding: 24rpx 0;
  border-top: 1px solid #f2f2f2;
}

/* 售罄 */
#sale_none{
  color: #ffffff;
  background-color: #aaaaaa;
}

.confirm {
  display: block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: #e72f4b;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.close {
  position: absolute;
  top: 22rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.close image {
  width: 26rpx;
  height: 26rpx;
}

#mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}
.spec .s_title {
  display: block;
  font-size: 28rpx;
  color: #333;
}

.spec_desc {
  display: flex;
  padding: 0 0 24rpx;
  border-bottom: 1px solid #f2f2f2;
  flex-wrap: wrap;
}

.spec_desc text {
  display: block;
  color: #333;
  font-size: 24rpx;
  background-color: #f2f2f2;
  height: 54rpx;
  border-radius: 27rpx;
  line-height: 54rpx;
  padding: 0 28rpx;
  margin-right: 26rpx;
  margin-top: 24rpx;
}

.shop_num{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:20rpx 0 0;
}
.shop_num .fl_container {
  font-size: 30rpx;
  color: #333;
}

.shop_num .fr_container {
  display: flex;
  border: 1px solid #eeeeee;
  border-radius: 8rpx;
}

.shop_num .fr_container text, .shop_num .fr_container input {
  display: block;
  width: 68rpx;
  height: 60rpx;
  margin-right: 2rpx;
  line-height: 60rpx;
  color: #333;
  font-size: 26rpx;
  text-align: center;
}

.shop_num .fr_container text.num_pro {
  color: #333;
  border-left: none;
  border-right: none;
}

.shop_num text.number {
  color: #666;
}

.shop_num .fr_container .onlyOne {
  /* background-color: #f5f5f5; */
  color: #ccc;
}

.spec_desc text.active {
  background-color: #e72f4b;
  color: #fff;
}
page {
  width: 100%;
  height: 100%;
}


.noscroll {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}