/* pages/my/myOrder/order.wxss */
page {
  background-color: #fbfbfb;
  overflow: hidden;
}
.order {
  display: flex;
  background-color: #fff;
}
.order_tab {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  height: 40px;
  line-height: 40px;
}
.order_list{
    margin-top: 10px; 
}
.is_check {
  color: #e72e4b;
  border-bottom: 1px solid #e72e4b;
}
.order_pro_name{
  color: #333;
  font-size:26rpx;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  white-space: pre-line;
  margin-right: 20rpx;
}
swiper-item {
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.order_none {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
  margin-top: 150rpx;
  margin-bottom: 50rpx;
}
.none_tips {
  color: #666666;
  font-size:26rpx;
  font-family: FZLTXHK;
  text-align: center;
}
.order_title {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 32rpx;
  background-color: #fff;
  font-size:26rpx;
  font-family: FZLTXHK;
}
.order_time {
  color: #999999;
}
.order_type {
  color: #e72e4b;
}
.order_product {
  height: 150rpx;
  display: flex;
  padding: 0 32rpx;
}
.product_image {
  width:130rpx;
  height:130rpx;
  display: block;
  margin: auto 0;
  background-color: #fff;
}
.product_detial {
  display: flex;
  flex-direction: column;
  width: 550rpx;
  margin-left: 20rpx;
}
.product_name_price, .product_sku_id{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.product_name_price text {
  color: #333;
  font-size:26rpx;
  font-family: FZLTXHK;
}
.product_sku_id text {
  color: #666;
  font-size:22rpx;
  font-family: FZLTXHK;
}
.product_num_price {
  background-color: #fff;
  height: 62rpx;
  line-height: 62rpx;
  color: #333;
  font-size:22rpx;
  font-family: FZLTXHK;
  text-align: right;
  padding-right: 32rpx;
}
.padding_both {
  padding: 0 16rpx;
}
.order_btns {
  display: flex;
  flex-direction: row-reverse;
  background-color: #fff;
  padding-right: 32rpx;
  border-top: 1rpx solid #f2f2f2;
}
.btn_s {
  width: 140rpx;
  height: 60rpx;
  border-radius: 6rpx;
  line-height: 60rpx;
  text-align: center;
  color: #333;
  font-size:26rpx;
  font-family: FZLTXHK;
  border: 1rpx solid #dddddd;
  margin: 20rpx 0;
  margin-left: 20rpx;
}
.right_now_buy {
  border: none;
  color: #fff;
  background-color: #e72e4b;
}