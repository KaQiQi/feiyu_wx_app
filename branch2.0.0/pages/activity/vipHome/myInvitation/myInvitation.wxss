/* pages/activity/vipHome/myInvitation/myInvitation.wxss */

.my_invitation {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.my_invitation image {
  margin-top: 40rpx;
  width: 200rpx;
  height: 200rpx;
  display: block;
  background: red;
}
.my_invitation text {
  color: #666;
  font-size: 24rpx;
  margin: 20rpx 0;
  
}

.save_img {
  background: red;
  height: 80rpx;
  width: 550rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}
.line{
  margin-top: 40rpx;
  width: 100%;
  height: 12rpx;
  background: #f2f2f2;
}
.consume_invitation{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.consume_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}
.consume_item image{
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
  background: red;
}
.consume_item text{
  color: #666;
  font-size: 28rpx;
  margin-top: 12rpx;
}


