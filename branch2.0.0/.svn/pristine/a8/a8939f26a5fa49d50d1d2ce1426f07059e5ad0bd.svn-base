/* pages/activity/vipHome/getInvitation/getInvitation.wxss */

.top_big_title {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 30rpx 20rpx 22rpx;
  font-size: 28rpx;
  color: #333;
  border-top: 1rpx solid #f2f2f2;
}

.pay_big_title {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 0rpx 20rpx 22rpx;
  font-size: 28rpx;
  color: #333;
}

.desc_detail {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 20rpx;
  flex-wrap: wrap;
}

.desc_img {
  width: 350rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
}

.left_border {
  width: 3rpx;
  height: 25rpx;
  background-color: #ac1630;
  margin-right: 10rpx;
}

.be_invite {
  display: flex;
  margin: 12rpx 20rpx;
  align-items: center;
}
.go_index{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.be_invite text {
  /* height: 80rpx;
  line-height: 80rpx;
  text-align: center; *//* border-radius: 40rpx; *//* background: #f2f2f2; */
  padding: 20rpx 0 20rpx 20rpx;
  /* padding-left: 90rpx;
  padding-right: 40rpx; */
  color: #666;
  font-size: 26rpx;
}

.be_invite_image {
  height: 80rpx;
  width: 80rpx;
  display: block;
  border-radius: 50%;
}

.kilner_img {
  height: 33rpx;
  width: 68rpx;
  display: block;
}

.be_rights {
  background: #f2f2f2;
  margin: 20rpx;
  border-radius: 10rpx;
  padding-bottom: 10rpx;
}

.line {
  width: 100%;
  height: 12rpx;
  margin: 30rpx 0;
  background: #f2f2f2;
}

.rights_title {
  display: flex;
  padding: 0rpx 20rpx 10rpx 20rpx;
  align-items: center;
}

.rights_title image {
  width: 20rpx;
  height: 20rpx;
  display: block;
  background: red;
}

.rights_title text {
  color: #666;
  font-size: 28rpx;
  padding: 0 12rpx;
}

.pay_text {
  color: #666;
  font-size: 28rpx;
  padding: 30rpx;
  padding-left: 54rpx;
}

.rights_item {
  padding: 10rpx 0;
  padding-left: 52rpx;
  color: #666;
  font-size: 24rpx;
}

.pay_intro {
  padding-left: 35rpx;
  color: #666;
  font-size: 20rpx;
}

.be_pay {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  display: flex;
  width: 100%;
  align-items: center;
  flex-direction: column;
}

.pay_now {
  width: 650rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: #ac1630;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.pay_custom {
  margin-top: 30rpx;
  width: 550rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background: #fff;
  text-align: center;
  border: 1rpx solid #f2f2f2;
  color: red;
  font-size: 28rpx;
}

.pay {
  padding: 10rpx 0;
  width: 100%;
  display: flex;
  align-items: center;
}

.pay_value {
  display: flex;
  align-items: center;
  padding-left: 50rpx;
}

.pay_value image {
  width: 28rpx;
  height: 28rpx;
  display: block;
}

.pay_value_text {
  color: #ac1630;
  font-size: 26rpx;
  margin-left: 12rpx;
}

.pay_value_text_no {
  color: #333;
  font-size: 26rpx;
  margin-left: 12rpx;
}

.pay_view {
  color: #333;
  font-size: 26rpx;
  padding-left: 35rpx;
}

.info_btn {
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
}

.invite_explain {
  color: #ac1630;
  font-size: 20rpx;
  padding: 10rpx;
}
