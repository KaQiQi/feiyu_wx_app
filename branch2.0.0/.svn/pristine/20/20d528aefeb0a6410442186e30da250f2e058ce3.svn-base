/* pages/storePage/storePage/discountPage.wxss */

/* 优惠券 */
page{
  width:100%;
  height: 100%;
  /* background-color: #e72f4b; */
}

.couponDetail{
width: 100%; 
height: 100%;
background-color: #f2f2f2;
padding: 20rpx 30rpx 0;
}
.scroll-view{
  width: 100%;
  overflow: scroll;
  height: 800rpx;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.finish{
width: 100%;
background-color:#e72e4b;
color:#fff;
font-size:28rpx;
text-align:center;
line-height:94rpx; 
position: absolute;
left: 0;
bottom: 0; 
z-index: 99999;
}
.couponTitle{
color:#333;
font-size: 36rpx;
margin: 40rpx 0 33rpx;
text-align: center;
}
#coupon_mask{
bottom: 0;
}
.coupon_desc{
width: 708rpx;
height: 218rpx;
position: relative;
margin-bottom: 20rpx;
}
.coupon_desc image{
position: absolute;
width: 708rpx;
height: 218rpx;
left: 0;
top: 0;
}
.left_content{
position: absolute;
top: 50rpx;
left: 50rpx;
z-index: 88;
/* display: flex;
flex-direction: column; */
}
.coupon_sum text{
font-size: 28rpx;
color: #333;
}
.coupon_sum .big_num{
color: #e72f4b;
font-size: 50rpx;
font-weight: bold;
margin-right: 20rpx;
}

.coupon_time text{
margin-right: 20rpx;
font-size: 26rpx;
color: #666;
}
.right_content{
position: absolute;
font-size: 26rpx;
padding: 60rpx 20rpx;
color: #e72f4b;
top: 34rpx;
right: 28rpx;
z-index: 99;
}
#gray{
  color: #333;
}
