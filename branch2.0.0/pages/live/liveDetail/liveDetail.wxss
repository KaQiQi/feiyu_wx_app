.clearfix::after{
  display: block;
  content: "";
  clear:both;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
view,text,image{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.topCarousel{
  width: 100%;
  height: 500rpx;
}
.topCarousel swiper{
  width: 100%;
  height: 100%;
  position: relative;
}
.v_container{
  width: 100%;
  height: 100%;
}

/* 视频播放图标 */
.video_img{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.video-style {
  position: fixed;
 width: 100%;
 height: 500rpx;
 top: 0;
 left: 0;
 z-index: 99999;
}
.slide-image{
  width:100%;
  height:100%;
}

.trailer{
  width: 100%;
  padding:0 20rpx;
}
.trailer_title{
  padding: 20rpx 10rpx 0;
}
.trailer_title image{
  width: 80rpx;
  height: 27rpx;
  vertical-align:middle;
  margin-right: 8rpx;
}
.trailer_title text{
  font-size: 28rpx;
  color: #333333;
  /* font-family: "FZLTXHK"; */
}
.trailer_body{
  padding:0 10rpx;
  margin-bottom: 20rpx;
  /* border-top: 1rpx solid #f2f2f2; */
}
.trailer_body text{
  display: block;
  font-size: 24rpx;
  color: #e72e4b;
  font-family: "FZLTXHK";
  margin-top: 20rpx;
}
.trailer_content{
  padding:20rpx 10rpx;
  border-top: 1rpx solid #f2f2f2;
}
.trailer_content text{
  font-size: 28rpx;
  color: #333333;
  font-family: "FZLTXHK";
}

.user{
  width: 100%;
  border-top: 1rpx solid #f2f2f2;
  padding: 20rpx 0 32rpx;
  height: 125rpx;
}
.userImg image{
  display: block;
  width: 76rpx;
  height: 76rpx;
  margin: 0 30rpx;
  border-radius: 50%;
}
.user_detail text{
  font-size: 24rpx;
}
.user_detail .follow{
  margin-left: 258rpx;
  font-size: 24rpx;
  color: #e72f4b;
}
.user_detail .left{
  color: #333333;
  font-family: "CenturyGothic";
}
.user_detail .detail_bottom text{
  color: #666666;
}
.user_detail .detail_bottom{
  margin-top: 16rpx;
}
.live_pro_icon{
  display: block;
  width: 100%;
  height: 62rpx;
}

.product_desc{
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}
.product_desc text{
  display: block;
}
.product_desc .product_img image{
  display: block;
  width: 260rpx;
  height: 260rpx;
  margin: 0rpx 30rpx;
}
.product_desc .product_brand{
  font-size: 28rpx;
  color: #333333;
}
.product_desc .product_descrip{
  margin-top: 18rpx;
  font-size: 20rpx;
  color: #666666;
  font-family: "FZLTXHK";
}
.product_desc .price{
  color: #333333;
  font-size: 24rpx;
  margin-top: 20rpx;
  text-decoration: line-through;
}
.product_desc .newprice{
  margin-top: 20rpx;
  font-size: 24rpx;
  color:#333333;
}
.product_desc .newprice text{
  display: inline-block;
  color: #e72e4b;
}
.desc_bottom{
  margin-top: 20rpx;
}
.discount{
  width: 156rpx;
  position: relative;
  height: 44rpx;
  line-height: 44rpx;
  margin-right: 20rpx;
}
.desc_bottom .discount image{
  width: 156rpx;
  height: 44rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1
}
.desc_bottom .discount text{
  text-align: center;
  width: 156rpx;
  font-size: 20rpx;
  color: #ffae00;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;

}
.desc_bottom .book{
  width: 156rpx;
  height: 44rpx;
  background-color: #ffae00;
  color: #fff;
  font-size: 20rpx;
  line-height: 44rpx;
  text-align: center;
}

/* 通用券 */
.product_coupon{
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}
.product_coupon text{
  display: block;
}
.product_coupon .logo_img image{
  display: block;
  width: 260rpx;
  height: 260rpx;
  margin: 0rpx 30rpx;
  border:1rpx solid #f2f2f2;
}
.product_coupon .deposit{
  font-size: 28rpx;
  color: #333333;
}
.product_coupon .coupon_require{
  margin-top: 18rpx;
  font-size: 20rpx;
  color: #666666;
  font-family: "FZLTXHK";
}
.coupon_bottom{
  margin-top: 125rpx;
}
.product_coupon .discount{
  width: 156rpx;
  position: relative;
  height: 44rpx;
  line-height: 44rpx;
  margin-right: 20rpx;
}
.product_coupon .discount image{
  width: 156rpx;
  height: 44rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1
}
.product_coupon .discount text{
  text-align: center;
  width: 156rpx;
  font-size: 20rpx;
  color: #ffae00;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;

}
.product_coupon .payment{
  width: 156rpx;
  height: 44rpx;
  background-color:#e72e4b;
  color: #ffae00;
  font-size: 20rpx;
  line-height: 44rpx;
  text-align: center;
}

/* 活动规则 */
.activity_rules image{
  width: 100%;
  height: 278rpx;
  display: block;
}

/* 底部 */
.footer{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 35rpx;
}
.footer .collection image{
  width: 30rpx;
  height: 28rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.footer .collection text,.remind text,.countdown text,.reminded text{
  font-family: "CenturyGothic";
  font-size: 24rpx;
  color: #333333;
}
.remind text{
  display: block;
  text-align: center;
  width: 160rpx;
  height: 80rpx;
  background-color: #e72e4b;
  margin-left: 30rpx;
  color: #fff;
}
.reminded text{
  display: block;
  text-align: center;
  width: 160rpx;
  height: 80rpx;
  background-color: #ccc;
  margin-left: 30rpx;
  color: #fff;
}