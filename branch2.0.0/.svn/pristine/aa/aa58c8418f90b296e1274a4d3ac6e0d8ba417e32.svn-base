name_locationpage{
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
.shop_container{
  background-color: #ffffff;
  width: 100%;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #f2f2f2;
}

.order_go {
  width: 17rpx;
  height: 22rpx;
  display: block;
  margin-left: 10rpx;
}

.shop_avatar{
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
}
.shop_name{
  color: #333333;
  font-size: 26rpx;
}
.location{
  display: flex;
  color: #888888;
  font-size: 22rpx;
  align-items: center;
  margin-top: 10rpx;
}
.right_content{
  color: #ffffff;
  width: 118rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #e72f4b;
  font-size: 22rpx; 
  display: flex;
  justify-content: center;
  align-items: center;
}
.location_icon{
  width: 18rpx;
  height: 22rpx;
  margin-right: 8rpx;
}
.name_location{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.left_content{
  display: flex;
}