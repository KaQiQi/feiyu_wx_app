/* pages/my/myCashBack/cashBackDetail/cashBackDetail.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

.main_container {
  width: 710rpx;
  padding: 40rpx 50rpx;
  margin: 40rpx auto 0;
  background-color: #fff;
}

.cash_to {
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.right {
  display: flex;
  flex-direction: column;
}

.top {
  text-align: right;
}

.bottom {
  font-size: 24rpx;
  color: #888;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  text-align: right;
}

.cash_detail {
  display: flex;
  flex-direction: column;
  padding-top: 40rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  border-bottom: 1rpx solid #f2f2f2;
}
.money_view{
  display: flex;
  align-items: center;
  margin-top:20rpx;
}
.money{
  font-size: 52rpx;
  color: #333;
  /* font-weight: 500; */
  margin-top: 6rpx;
}
.money_num {
  font-size: 52rpx;
  color: #333;
  /* font-weight: 500; */
  padding-left: 20rpx
}
.placeholder {
  font-size: 30rpx;
  color: #888;
  /* font-weight: 500; */

}

.main_tips {
  padding: 40rpx 0 40rpx;
  color: #888;
  font-size: 24rpx;
}

.all_btn {
  color: #455a90;
  margin-left: 20rpx;
}

.cashback_btn {
  width: 600rpx;
  margin: 40rpx auto 0;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #e72f4b;
  color: #fffefe;
  border-radius: 6rpx;
  text-align: center;
  font-size: 28rpx;
}
