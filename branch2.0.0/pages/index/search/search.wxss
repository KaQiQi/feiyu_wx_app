/* pages/index/search/search.wxss */

page {
  background: #f2f2f2;
}

.search_view {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
  background: #f2f2f2;
}

.new_send_view {
  justify-content: space-between;
  display: flex;
  width: 100%;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 4rpx;
  background: #fff;
  /* background-color: rgba(00, 00, 00, 0.20); *//* border: 1rpx solid red; */
}

.new_send_view_cover_image {
  width: 24rpx;
  height: 24rpx;
  display: block;
  margin: auto 0;
}

.new_send_view_text {
  color: #888;
  font-size: 26rpx;
}

.input_view {
  width: 100%;
  color: #333;
  font-size: 24rpx;
  padding-left: 10rpx;
}

.result_view {
  margin-top: 106rpx;
}

.result {
  background: #fff;
  padding: 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
 
}
.no_result{
   width: 100%;
   height:510rpx;
   align-items: center;
   display: flex;
   justify-content: center;
   font-size: 28rpx;
   color: #888;
}

.result image {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: auto 0;
  border-radius: 50%;

}

.name_id {
 padding-left: 20rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.name {
  font-size: 26rpx;
  color: #333;
}

.id {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #888;
}
