/* pages/activity/vipClub/vipSendRights/vipSendRights.wxss */
.line{
  width: 100%;
  border-bottom: 1rpx solid #f2f2f2;
  margin-bottom: 10rpx;
}
.vip_list {
  width: 100%;
  padding: 10rpx 20rpx;
}

.vip_list text {
  font-size: 28rpx;
  color: #333;
}

.vip_content {
  margin: 10rpx 0;
  width: 100%;
  height: 120rpx;
  align-items: center;
  display: flex;
  background: #faf7ee;
}

.vip_content image {
  width: 138rpx;
  height: 106rpx;
  display: block;
  margin: 0 58rpx;

}
.order{
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 47rpx;
  height: 28rpx;
}

.vip_text {
  height: 120rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.vip_text1 {
  font-size: 24rpx;
  color: #333;
  padding: 2rpx;
}

.vip_line {
  width: 100%;
  background: #f2f2f2;
  height: 12rpx;
}

.send_title {
  width: 100%;
  padding: 20rpx 30rpx 0 20rpx;
}

.send_title text {
  font-size: 28rpx;
  color: #333;
}

.vip_friends {
  display: flex;
  flex-wrap: wrap;
}

.vip_friends_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 30rpx 30rpx 0rpx 30rpx;
}
.friends_item{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.button_share{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
opacity: 0;

}

.friends_item_image {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  border-radius: 50%;
}

.vip_friends_item text {
  font-size: 22rpx;
  justify-content: center;
  width: 90rpx;
  color: #333;
  display: flex;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.btn_get{
  position: fixed;
  bottom: 14rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 690rpx;
  background: #f5ca3a;
  height: 80rpx;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
}
.btn_get_no{
  position: fixed;
  bottom: 14rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 690rpx;
  background: #ddd;
  height: 80rpx;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 40rpx;
}
