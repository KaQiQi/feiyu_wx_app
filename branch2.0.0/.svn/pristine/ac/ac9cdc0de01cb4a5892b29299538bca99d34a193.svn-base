/* pages/activity/vipHome/myInvitation/myInvitation.wxss */
.top_big_title{
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 30rpx 20rpx 22rpx;
  font-size: 28rpx;
  color: #333333;
  border-top: 1rpx solid #f2f2f2;
}
.desc_detail{
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 20rpx;
  flex-wrap: wrap;
}
.desc_img{
  width: 350rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
}
.left_border{
  width: 3rpx;
  height: 25rpx;
  background-color: #ac1630;
  margin-right: 10rpx;
}

.my_invitation {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.my_invitation image {
  margin-top: 40rpx;
  width: 200rpx;
  height: 200rpx;
  display: block;
}
.my_invitation text {
  color: #666;
  font-size: 24rpx;
  margin: 20rpx 0;
  
}

.save_img {
  background-color: #ac1630;
  height: 80rpx;
  width: 550rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}
.line{
  margin-top: 40rpx;
  width: 100%;
  height: 12rpx;
  background: #f2f2f2;
}
.consume_invitation{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.consume_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
}
.consume_item image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.consume_item text{
  color: #666;
  font-size: 28rpx;
  margin-top: 12rpx;
}

.top_title{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}
.line_icon{
  width: 49rpx;
  height: 6rpx;
}
.title_desc{
  color: #333333;
  font-size: 28rpx;
  margin: 0 10rpx;
}
.user_name{
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.total_money{
  text-align: center;
}
text.main_color{
  color: #ac1630;
}


